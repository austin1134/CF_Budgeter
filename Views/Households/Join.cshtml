@model CF_Budgeter.Models.Household

@{
    ViewBag.Title = "Join";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="widget budgeter-form">
    <div class="widget-header clearfix">
        <h3><i class="icon ion-compose"></i></h3>
    </div>
    <div class="body-content">

        @using (Html.BeginForm("Join", "Households", new { invitationId = ViewBag.invitationId }, FormMethod.Post, new { @class = "form-horizontal partial-form", role = "form" }))
        {
            <div class="form-group">
                @Html.AntiForgeryToken()
                <div class="col-xs-6">
                    <input type="submit" name="submitButton" value="Confirm" class="btn btn-success btn-block" />
                </div>
                <div class="col-xs-6">
                    <input type="submit" name="submitButton" value="Cancel" class="btn btn-danger btn-block" />
                </div>

            </div>
        }
    </div>
</div>